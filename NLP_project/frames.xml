<frames>
	<frame name="RELATIONS">
		<field action="NEAR" name="NEAR" pattern="NEAR | NEAR-RELN" weight="1"/>
		<field action="ABOVE" name="ABOVE" pattern="ABOVE | OVER | HIGHER" weight="1"/>
		<field action="ON" name="ON" pattern="ON" weight="1"/>
	</frame>
	<frame name="ABOVE">
		<field action="GET_FIGURE" name="FIGURE" pattern="ONT::COLOR-VAL CUBE | ONT::COLOR-VAL ONE" weight="1"/>
		<field action="GET_GROUND" name="GROUND" pattern="ONT::COLOR-VAL CUBE | ONT::COLOR-VAL ONE" weight="1"/>
		<field action="obligatory" name="ABOVE" pattern="ABOVE" weight="3"/>
	</frame>
	<frame name="NEAR">
		<field action="GET_FIGURE" name="FIGURE" pattern="ONT::COLOR-VAL CUBE | ONT::COLOR-VAL ONE" weight="1"/>
		<field action="GET_GROUND" name="GROUND" pattern="ONT::COLOR-VAL CUBE | ONT::COLOR-VAL ONE" weight="1"/>
		<field action="obligatory" name="CLOSE" pattern="NEAR" weight="3"/>
	</frame>
	<frame name="NEAR-RELN">
		<field action="GET_FIGURE" name="FIGURE" pattern="ONT::COLOR-VAL CUBE | ONT::COLOR-VAL ONE" weight="1"/>
		<field action="GET_GROUND" name="GROUND" pattern="ONT::COLOR-VAL CUBE | ONT::COLOR-VAL ONE" weight="1"/>
		<field action="obligatory" name="NEAR" pattern="NEAR" weight="3"/>
	</frame>

</frames>
